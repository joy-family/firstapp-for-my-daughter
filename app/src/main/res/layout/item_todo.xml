<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/todo_bg">
        <CheckBox
                android:layout_width="@dimen/check_size"
                android:layout_height="@dimen/check_size"
                android:id="@+id/status"
                android:background="@null"
                android:button="@drawable/ic_check_box"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/basic_margin"
                android:layout_marginTop="@dimen/basic_margin"
                app:layout_constraintTop_toTopOf="parent"
                tools:checked="true"/>

        <TextView
                tools:text="PreView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/todoTitle"
                style="@style/TextView_Header"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/status"
                android:layout_marginStart="@dimen/basic_gap_between"
                app:layout_constraintBottom_toBottomOf="@+id/status"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginEnd="@dimen/basic_gap_between"
                app:layout_constraintEnd_toStartOf="@+id/icon"/>

        <ImageView android:id="@+id/icon"
                   android:layout_width="@dimen/icon_size"
                   android:layout_height="@dimen/icon_size"
                   app:srcCompat="@android:color/holo_orange_dark"
                   android:contentDescription="@string/icon"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="@dimen/basic_margin"
                   app:layout_constraintTop_toTopOf="@+id/todoTitle"
                   app:layout_constraintBottom_toBottomOf="@+id/todoTitle"/>
        <TextView
                tools:text="Image with title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textDesc"
                style="@style/TextView_Body"
                android:layout_marginEnd="@dimen/basic_margin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/basic_margin"
                android:layout_marginTop="@dimen/basic_margin"
                app:layout_constraintTop_toBottomOf="@+id/todoTitle"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_alarm_on_red_24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/basic_margin"
                android:id="@+id/alarm"
                android:layout_marginTop="@dimen/basic_margin"
                app:layout_constraintTop_toBottomOf="@+id/textDesc"/>
        <TextView
                tools:text="2019. 06. 22 18:00 am"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/alarmTime"
                style="@style/TextView_Body"
                android:layout_marginTop="@dimen/basic_margin"
                app:layout_constraintTop_toBottomOf="@+id/textDesc"
                app:layout_constraintStart_toEndOf="@+id/alarm"
                android:layout_marginStart="@dimen/basic_gap_between"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/basic_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>